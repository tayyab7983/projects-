    // ---------- rendering & UI logic ----------
    const listEl = document.getElementById('list');
    const countEl = document.getElementById('count');

    function renderList(data){
      listEl.innerHTML = '';
      countEl.textContent = data.length;
      data.forEach(h => {
        const div = document.createElement('div');
        div.className='card';
        div.innerHTML = `
          <div class="thumb"><img src="${h.img}" style="width:100%;height:100%;object-fit:cover" alt="${h.title}"/></div>
          <div class="content">
            <h4 class="title">${h.title}</h4>
            <div class="meta">${h.city} • ${h.area} • ${h.price}</div>
            <div class="tags">
              <div class="tag">${h.beds ? h.beds+' BHK' : 'Studio'}</div>
              ${h.furnished ? '<div class="tag">Furnished</div>' : ''}
              ${h.metro ? '<div class="tag">Near Metro</div>' : ''}
              ${h.pet ? '<div class="tag">Pet friendly</div>' : ''}
            </div>
            <div style="margin-top:10px;display:flex;gap:8px;align-items:center">
              <button class="btn" data-id="${h.id}">View</button>
              <button class="ghost" onclick="event.stopPropagation()">Save</button>
            </div>
          </div>`;
        listEl.appendChild(div);
        div.querySelector('.btn').addEventListener('click',()=>openDetail(h.id));
      });
    }

    function openDetail(id){
      const h = houses.find(x=>x.id===id);
      if(!h) return;
      document.getElementById('modalImg').src = h.img;
      document.getElementById('modalTitle').textContent = h.title;
      document.getElementById('modalDesc').textContent = h.desc;
      const det = document.getElementById('modalDetails');
      det.innerHTML = `City: ${h.city}<br/>Area: ${h.area}<br/>Price: ${h.price}<br/>Beds: ${h.beds ? h.beds : 'Studio'}`;
      document.getElementById('modalBg').style.display='flex';
    }

    document.getElementById('closeModal').addEventListener('click',()=>document.getElementById('modalBg').style.display='none');
    document.getElementById('openLogin').addEventListener('click',()=>document.getElementById('authBg').style.display='flex');
    document.getElementById('closeAuth').addEventListener('click',()=>document.getElementById('authBg').style.display='none');
    document.getElementById('switchAuth').addEventListener('click',()=>{
      const t = document.getElementById('authTitle');
      if(t.textContent==='Login'){ t.textContent='Signup'; document.getElementById('authForm').action='/api/auth/signup'; } else { t.textContent='Login'; document.getElementById('authForm').action='/api/auth/login'; }
    });

    // search & filters
    document.getElementById('searchBtn').addEventListener('click',()=>{
      const q = document.getElementById('q').value.toLowerCase();
      const beds = document.getElementById('beds').value;
      const out = houses.filter(h=>{
        if(q && !(h.title.toLowerCase().includes(q) || h.city.toLowerCase().includes(q))) return false;
        if(beds && !(`${h.beds} BHK`===beds)) return false;
        return true;
      });
      renderList(out);
    });

    document.querySelectorAll('.filters button').forEach(btn=>btn.addEventListener('click',()=>{
      const f = btn.dataset.filter;
      let out = houses;
      if(f==='furnished') out = houses.filter(h=>h.furnished);
      if(f==='near-metro') out = houses.filter(h=>h.metro);
      if(f==='pet') out = houses.filter(h=>h.pet);
      renderList(out);
    }));

    // auth form submission (placeholder) - sends to /api/auth/login or signup
    document.getElementById('authForm').addEventListener('submit',async function(e){
      e.preventDefault();
      const action = this.action || '/api/auth/login';
      const payload = {email:document.getElementById('email').value,password:document.getElementById('pwd').value};
      try{
        // developer: connect to your Django backend here. Example:
        // const res = await fetch(action,{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify(payload)});
        // const data = await res.json();
        // handle token, redirect etc.
        alert('This demo frontend will POST to: ' + action + '\nPayload: ' + JSON.stringify(payload));
        document.getElementById('authBg').style.display='none';
      }catch(err){console.error(err);alert('Auth failed');}
    });

    // initial render
    renderList(houses);

    // optional: try loading from API if available
    (async ()=>{
      try{
        const r = await fetch('/api/houses');
        if(r.ok){
          const data = await r.json();
          if(Array.isArray(data) && data.length) renderList(data);
        }
      }catch(e){/* ignore - dev will provide backend */}
    })();

  </script>
